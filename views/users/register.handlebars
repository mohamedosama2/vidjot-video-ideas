<div class="row">
    <div class="col-md-6">
        <div class="card card-body">
            <h3 class="text-center">Account register</h3>
            <form action="/users/registered" method="POST"  >
                 <div class="form-group">
                   <label for="name">name</label>
                   <input type="text" name="name" value="{{name}}" class="form-control" required>
                </div>
                <div class="form-group">
                   <label for="email">E-mail</label>
                   <input type="email" name="email" value="{{email}}" class="form-control" required>
                </div>
                <div class="form-groub">
                    <label for="password">Password</label>
                    <input type="password" name="password" value="{{password}}" class="form-control" required>
                </div>
                 <div class="form-groub">
                    <label for="password2">confirmed Password</label>
                    <input type="password" name="password2" value="{{password2}}" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>